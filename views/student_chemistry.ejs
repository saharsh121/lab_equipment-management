<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chemistry Lab</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/student_subject.css">

</head>
<body>
<div class="container mt-5">
    <h2 class="text-center mb-4">Chemistry Lab - Available Equipment</h2>

    <!-- Section 1: Equipment Grid -->
    <% if (equipment.length > 0) { %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
        <% equipment.forEach(eq => { %>
        <div class="col">
            <div class="card lab-card text-center">
                <div class="card-body">
                    <h5 class="card-title">ID: <%= eq.id %></h5>
                    <p class="card-text"><strong><%= eq.equipment_name %></strong></p>
                    <p class="card-text">Available: <%= eq.quantity %></p>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
    <% } else { %>
        <p class="text-center mb-5">No equipment available right now.</p>
    <% } %>

    <!-- Section 2: Take Equipment Form -->
    <h3>Take Equipment</h3>
    <% if (equipment.length > 0) { %>
    <form action="/take-chemistry-equipment" method="POST" class="mb-5">
        <!-- Hidden fields for logged-in student -->
        <input type="hidden" name="student_id" value="<%= studentId %>">
        <input type="hidden" name="student_name" value="<%= studentName %>">

        <div class="mb-3">
            <label for="equipment_id" class="form-label">Select Equipment</label>
            <select name="equipment_id" id="equipment_id" class="form-select" required>
                <% equipment.forEach(eq => { %>
                <option value="<%= eq.id %>"><%= eq.equipment_name %> (ID: <%= eq.id %>, Available: <%= eq.quantity %>)</option>
                <% }) %>
            </select>
        </div>

        <div class="mb-3">
            <label for="quantity" class="form-label">Quantity</label>
            <input type="number" name="quantity" id="quantity" class="form-control" min="1" value="1" required>
        </div>

        <div class="mb-3">
            <label for="return_expected" class="form-label">Expected Return Date & Time</label>
            <input type="datetime-local" name="return_expected" id="return_expected" class="form-control" required>
        </div>

        <button type="submit" class="btn btn-primary">Take Equipment</button>
    </form>
    <% } else { %>
        <p class="text-muted mb-5">No equipment available to take at this moment.</p>
    <% } %>

    <!-- Section 3: Return Equipment -->
    <h3>Return Equipment</h3>
    <% if (records.length > 0) { %>
    <form action="/return-chemistry-equipment" method="POST">
        <div class="mb-3">
            <label for="record_id" class="form-label">Select Record</label>
            <select name="record_id" id="record_id" class="form-select" required>
                <% records.forEach(r => { %>
                <option value="<%= r.id %>">
                    <%= r.equipment_name %> (Record ID: <%= r.id %>, Qty: <%= r.quantity || 1 %>)
                </option>
                <% }) %>
            </select>
        </div>
        <button type="submit" class="btn btn-success">Return Equipment</button>
    </form>
    <% } else { %>
        <p class="text-muted">No equipment to return.</p>
    <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
